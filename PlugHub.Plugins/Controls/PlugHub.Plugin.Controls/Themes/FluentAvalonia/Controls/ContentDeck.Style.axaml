<Styles
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:core="clr-namespace:PlugHub.Plugin.Controls.Controls;assembly=PlugHub.Plugin.Controls">

	<Style Selector="core|ContentDeck:pointerover:edge-left Border.accent-bar">
		<Setter Property="BorderThickness" Value="0,0,0,4" />
	</Style>
	<Style Selector="core|ContentDeck:pointerover:edge-right Border.accent-bar">
		<Setter Property="BorderThickness" Value="0,4,0,0" />
	</Style>
	<Style Selector="core|ContentDeck:pointerover:edge-top Border.accent-bar">
		<Setter Property="BorderThickness" Value="0,4,0,0" />
	</Style>
	<Style Selector="core|ContentDeck:pointerover:edge-bottom Border.accent-bar">
		<Setter Property="BorderThickness" Value="0,0,0,4" />
	</Style>

	<Style Selector="core|ContentDeck Button.content-item">
		<Setter Property="Background" Value="Transparent" />
		<Setter Property="BorderBrush" Value="Transparent" />
		<Setter Property="BorderThickness" Value="0" />
	</Style>

	<Style Selector="core|ContentDeck Button.content-item:pointerover /template/ ContentPresenter">
		<Setter Property="Background" Value="Transparent" />
	</Style>

	<Style Selector="core|ContentDeck Button.content-item .accent-bar" x:SetterTargetType="Border">
		<Setter Property="Opacity" Value="0" />
		<Setter Property="Transitions">
			<Transitions>
				<DoubleTransition Property="Opacity" Duration="0:0:0.30" />
			</Transitions>
		</Setter>
	</Style>

	<Style Selector="core|ContentDeck Button.content-item:pointerover .accent-bar" x:SetterTargetType="Border">
		<Setter Property="Opacity" Value="1" />
	</Style>

</Styles>